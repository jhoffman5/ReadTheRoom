<hr>
<div class="row">
    <div class="col-md-12">
        <h3 class="userTitle">@ {{this.username}}</h3>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-md-6" style="background-color: rgba(64, 64, 226, 0.842);">
        <h2>
            Choose Existing Room
        </h2>
        <form id="selectRoom" action="/existingRoom" method="POST">
            <div class="form-group"> <!---class="dropdown-menu" role="menu">-->
                <label for="roomName">Select</label>
                <select class="form-control" name="roomName" id="roomName">
                    {{#each allRooms}}
                        <option>{{this.roomName}}</option>
                    {{/each}}
                </select>
            </div>
            <button id="selectButton" class="btn btn-primary">Select</button>
        </form>
    </div>
    <div class="col-md-6" style="background-color: rgba(255, 46, 46, 0.726)">
        <h2>
            Create a New Room
        </h2>
        <form id="createNewRoom" action="/newRoom" method="POST">
            <div>
                <label for="roomName">Enter New Room Name:</label>
                <input type="text" class="form-control" name="roomName" id="roomName">
            </div>
            <button id="newRoomButton" class="btn btn-primary">Create</button>
        </form>
    </div>

    <div style="width:100%; height: 50px;"></div>

    <table class="table table-bordered table-hover" style="border-collapse:collapse;">
        <thead style= "background-color:rgba(27, 27, 27, 0.842);">
            <tr style="color: white"><th>Number of Users</th><th>Sentiment Value</th><th>Room Name</th></tr>
        </thead>

        <tbody style="overflow-y:auto;">
        {{#each allRooms}}
            <tr style = "background-color:rgb(83, 82, 82)">
                <td style="color: white">
                    {{this.numUsers}}
                </td>
                <td style="color: white">
                    {{this.sentiment}}
                </td>
                <td style="color: white">
                    {{this.roomName}}
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>